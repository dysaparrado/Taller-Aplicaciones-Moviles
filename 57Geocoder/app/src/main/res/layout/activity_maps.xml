<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dss22.a57geocoder.MapsActivity" >


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.guillermo.a57_g_maps_geocoder.MapsActivity" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="10dp"
        android:background="#fff"
        android:id="@+id/rellayout1">

        <EditText
            android:id="@+id/txtbusqueda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:hint="Buscar..."
            android:imeOptions="actionSearch"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnbusqueda"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="buscar"
            android:layout_alignBaseline="@+id/txtbusqueda"
            android:layout_alignBottom="@+id/txtbusqueda"
            android:layout_alignRight="@+id/txtbusqueda"/>

    </RelativeLayout>


</RelativeLayout>



