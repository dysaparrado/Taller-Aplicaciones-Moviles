<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dss22.a44animacion_xml.MainActivity">


    <ImageView
        android:id="@+id/faceIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="92dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/angular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="60dp"
        android:layout_height="56dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="441dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="onButtonClick4"
        android:text="Mv. Dr"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="60dp"
        android:layout_height="56dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="177dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="onButtonClick3"
        android:text="Mv. Ab"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/faceIcon" />

    <Button
        android:id="@+id/button2"
        android:layout_width="127dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="177dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="onButtonClick"
        android:text="Desvanecer"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faceIcon" />

    <Button
        android:id="@+id/button7"
        android:layout_width="69dp"
        android:layout_height="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="177dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="onButtonClick2"
        android:text="Rotar"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/faceIcon" />

</android.support.constraint.ConstraintLayout>
